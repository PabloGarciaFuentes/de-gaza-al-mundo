---
import TransparenciaImg_1 from "../assets/images/transparency/transparencia_1.png";
import TransparenciaImg_3 from "../assets/images/transparency/transparencia_3.png";
import TransparenciaImg_4 from "../assets/images/transparency/transparencia_4.png";
import TransparenciaImg_5 from "../assets/images/transparency/transparencia_5.png";

const defaultData = {
  header: {
    badge: "Transparencia",
    title: "Nuestra labor, contada con imágenes",
    description: "Cada gesto solidario nos une y construye esperanza. Detrás de cada aporte hay personas que se ayudan entre sí y comunidades que vuelven a sentirse acompañadas. Compartimos imágenes reales de nuestras acciones para que puedas ver cómo, juntos, transformamos la solidaridad en apoyo concreto y en un futuro más digno para quienes más lo necesitan.",
    linkText: "Ver galería completa",
    linkIcon: "arrow_forward"
  },
  gallery: [
    {
      image: TransparenciaImg_3.src,
      alt: "Familia de Abdallah",
      caption: "Familia de Abdallah"
    },
    {
      image: TransparenciaImg_5.src,
      alt: "Hijos de Abdallah",
      caption: "Hijos de Abdallah"
    },
    {
      image: TransparenciaImg_1.src,
      alt: "Abdallah y sus hijos",
      caption: "Abdallah y sus hijos"
    },
    {
      image: TransparenciaImg_4.src,
      alt: "Massa y Waseem",
      caption: "Massa y Waseem"
    }
  ]
};

const { data = defaultData } = Astro.props;
---

<!-- SectionHeader + ImageGrid -->
<section id="transparency-section" class="py-16 md:py-24 bg-white scroll-mt-20">
  <div class="w-full max-w-7xl mx-auto px-4 sm:px-10">
    <div
      class="flex flex-col md:flex-row md:items-end justify-between gap-6 mb-12"
    >
      <div class="max-w-2xl">
        <span
          class="text-[#236E1E] font-bold tracking-wider text-sm uppercase mb-2 flex items-center gap-2"
        >
          {data.header.badge}
        </span>
        <h2
          class="text-[#171212] text-3xl md:text-4xl font-bold leading-tight tracking-tight"
        >
          {data.header.title}
        </h2>
        <p class="text-[#6b6b6b] mt-4 text-lg">
          {data.header.description}
        </p>
      </div>
      <a
        class="hidden md:flex items-center gap-2 text-[#931a24] font-bold hover:text-red-800"
        href="#"
      >
        {data.header.linkText}
        <span class="material-symbols-outlined">{data.header.linkIcon}</span>
      </a>
    </div>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      {data.gallery.map((item: { alt: unknown; image: any; caption: unknown; }) => (
        <div
          class="group relative overflow-hidden rounded-xl aspect-square shadow-sm"
        >
          <div
            class="w-full h-full bg-center bg-cover transition-transform duration-500 group-hover:scale-110"
            data-alt={item.alt}
            style={`background-image: url("${item.image}");`}
          >
          </div>
          <div
            class="absolute inset-0 bg-linear-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end p-4"
          >
            <p class="text-white font-medium">{item.caption}</p>
          </div>
        </div>
      ))}
    </div>
    <div class="mt-8 text-center md:hidden">
      <a
        class="inline-flex items-center gap-2 text-[#931a24] font-bold"
        href="#"
      >
        {data.header.linkText}
        <span class="material-symbols-outlined">{data.header.linkIcon}</span>
      </a>
    </div>
  </div>
</section>