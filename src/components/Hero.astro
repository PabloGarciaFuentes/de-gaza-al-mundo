const { data = defaultData } = Astro.props;
---

<!-- HeroSection -->
<section id="hero-section" class="relative bg-[#f8f6f6] py-12 md:py-24 px-4 sm:px-10">
  <div class="w-full max-w-7xl mx-auto">
    <div class="@container">
      <div class="flex flex-col-reverse lg:flex-row gap-12 items-center">
        <!-- Text Content -->
        <div class="flex flex-col gap-6 lg:w-1/2 items-start">
          <div
            class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-[#236E1E]/10 text-[#236E1E] text-sm font-medium"
          >
            <span class="material-symbols-outlined text-sm">{data.badge.icon}</span>
            {data.badge.text}
          </div>
          <h2
            class="text-[#171212] text-4xl sm:text-5xl lg:text-6xl font-black leading-tight tracking-tight"
          >
            {data.title}
          </h2>
          <p class="text-[#6b6b6b] text-lg leading-relaxed max-w-xl">
            {data.description}
          </p>
          <div class="flex flex-col sm:flex-row gap-4 w-full sm:w-auto mt-2">
            {data.buttons.map((button: { type: string; icon: unknown; label: unknown; }) => (
              <button
                class={`flex items-center justify-center gap-2 rounded-lg h-12 px-8 ${
                  button.type === 'primary' 
                    ? 'bg-[#931a24] hover:bg-red-800 text-white' 
                    : 'bg-white border border-[#e5e7eb] hover:bg-gray-50 text-[#171212]'
                } transition-colors text-base font-${
                  button.type === 'primary' ? 'bold' : 'semibold'
                } ${button.type === 'primary' ? 'shadow-md' : ''} w-full sm:w-auto cursor-pointer`}
              >
                {button.icon && <span class="material-symbols-outlined">{button.icon}</span>}
                <span>{button.label}</span>
              </button>
            ))}
          </div>
          <div class="flex items-center gap-4 text-sm text-[#6b6b6b] mt-2">
            <div class="flex -space-x-3">
              {data.stats.avatars.map((avatar: string | null | undefined, index: number) => (
                <img
                  alt={`User avatar ${index + 1}`}
                  class="w-10 h-10 rounded-full border-2 border-white object-cover"
                  src={avatar}
                />
              ))}
            </div>
            <span>{data.stats.text}</span>
          </div>
        </div>
        <!-- Hero Image -->
        <div class="w-full lg:w-1/2">
          <div
            class="relative rounded-2xl overflow-hidden shadow-2xl aspect-4/3 group"
          >
            <div
              class="absolute inset-0 bg-black/10 group-hover:bg-black/0 transition-all duration-500"
            >
            </div>
            <div
              class="w-full h-full bg-center bg-cover object-cover transition-transform duration-700 group-hover:scale-105"
              data-alt={data.heroImage.alt}
              style={`background-image: url("${data.heroImage.src}");`}
            >
            </div>
            <!-- Palestinian Flag Colors Accent -->
            <div
              class="absolute bottom-0 left-0 w-full h-2 bg-linear-to-r from-primary via-black to-accent-green"
            >
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>