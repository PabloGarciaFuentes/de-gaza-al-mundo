---

<!-- HeroSection -->
<section
  id="hero-section"
  class="relative bg-[#f8f6f6] py-12 px-4 sm:px-10 scroll-mt-20"
>
  <div class="w-full max-w-7xl mx-auto">
    <div class="@container">
      <div class="flex flex-col-reverse lg:flex-row gap-12 items-center">
        <!-- Text Content -->
        <div class="flex flex-col gap-6 lg:w-1/2 items-start">
          <div
            class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-[#236E1E]/10 text-[#236E1E] text-sm font-medium"
          >
            <span class="material-symbols-outlined text-sm"
              >{data.badge.icon}</span
            >
            {data.badge.text}
          </div>
          <h1
            class="text-[#171212] text-4xl sm:text-5xl lg:text-6xl font-black leading-tight tracking-tight"
          >
            {data.title}
          </h1>
          <p class="text-[#6b6b6b] text-lg leading-relaxed max-w-xl">
            {data.description}
          </p>
          <h1
            class="text-[#171212] text-xl sm:text-xl lg:text-xl font-black leading-tight tracking-tight"
          >
            {data.subtitle}
          </h1>
          <div
            class="grid grid-cols-1 sm:grid-cols-2 gap-y-4 gap-x-8 w-full max-w-xl py-2"
          >
            {data.features.map((feature: { icon: unknown; iconColor: any; text: unknown; }) => (
              <div class="flex items-center gap-3">
                <div
                  class={`w-10 h-10 shrink-0 rounded-lg bg-white border border-[#f0f0f0] flex items-center justify-center ${feature.iconColor} shadow-sm`}
                >
                  <span class="material-symbols-outlined" style="font-variation-settings: 'FILL' 1;">
                    {feature.icon}
                  </span>
                </div>
                <span class="text-text-main font-medium text-sm leading-tight">
                  {feature.text}
                </span>
              </div>
            ))}
          </div>
          <div class="flex flex-col sm:flex-row gap-4 w-full sm:w-auto mt-2">
            {
              data.buttons.map(
                (button: {
                  type: string;
                  icon: unknown;
                  label: unknown;
                  url: string;
                }) => {
                  if (button.label === "Unirme al Grupo") {
                    return (
                      <a
                        href={button.url}
                        target="_blank"
                        rel="noopener noreferrer"
                        aria-label={`${button.label} - Se abre en nueva ventana`}
                        class={`flex items-center justify-center gap-2 rounded-lg h-12 px-8 ${
                          button.type === "primary"
                            ? "bg-[#931a24] hover:bg-red-800 text-white"
                            : "bg-white border border-[#e5e7eb] hover:bg-gray-50 text-[#171212]"
                        } transition-colors text-base font-${
                          button.type === "primary" ? "bold" : "semibold"
                        } ${button.type === "primary" ? "shadow-md" : ""} w-full sm:w-auto cursor-pointer`}
                      >
                        {button.icon && (
                          <span class="material-symbols-outlined">
                            {button.icon}
                          </span>
                        )}
                        <span>{button.label}</span>
                      </a>
                    );
                  } else {
                    return (
                      <button
                        class={`flex items-center justify-center gap-2 rounded-lg h-12 px-8 ${
                          button.type === "primary"
                            ? "bg-[#931a24] hover:bg-red-800 text-white"
                            : "bg-white border border-[#e5e7eb] hover:bg-gray-50 text-[#171212]"
                        } transition-colors text-base font-${
                          button.type === "primary" ? "bold" : "semibold"
                        } ${button.type === "primary" ? "shadow-md" : ""} w-full sm:w-auto cursor-pointer`}
                      >
                        {button.icon && (
                          <span class="material-symbols-outlined">
                            {button.icon}
                          </span>
                        )}
                        <span>{button.label}</span>
                      </button>
                    );
                  }
                }
              )
            }
          </div>
          <!-- <div class="flex items-center gap-4 text-sm text-[#6b6b6b] mt-2">
            <div class="flex -space-x-3">
              {data.stats.avatars.map((avatar: string | null | undefined, index: number) => (
                <img
                  alt={`Avatar de usuario ${index + 1} de la comunidad`}
                  class="w-10 h-10 rounded-full border-2 border-white object-cover"
                  src={avatar}
                  loading="lazy"
                  width="40"
                  height="40"
                />
              ))}
            </div>
            <span>{data.stats.text}</span>
          </div> -->
        </div>
        <!-- Hero Image -->
        <div class="w-full lg:w-1/2 flex justify-center">
          <div
            class="relative rounded-2xl overflow-hidden shadow-2xl aspect-3/4 group max-w-xs sm:max-w-sm w-full"
          >
            <div
              class="absolute inset-0 bg-black/10 group-hover:bg-black/0 transition-all duration-300"
            >
            </div>
            <img
              src={data.heroImage.src}
              alt={data.heroImage.alt}
              class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
              loading="eager"
              fetchpriority="high"
              width="600"
              height="800"
            />
            <!-- Palestinian Flag Colors Accent Top -->
            <div
              class="absolute top-0 left-0 w-full h-1 opacity-70"
              style="background: linear-gradient(to right, #931a24, #000000, #ffffff, #236E1E); filter: blur(3.5px); border-radius: 16px 16px 0 0;"
            >
            </div>
            <!-- Palestinian Flag Colors Accent Bottom -->
            <div
              class="absolute bottom-0 left-0 w-full h-1 opacity-70"
              style="background: linear-gradient(to right, #931a24, #000000, #ffffff, #236E1E); filter: blur(3.5px); border-radius: 0 0 16px 16px;"
            >
            </div>
            <!-- Palestinian Flag Colors Accent Left -->
            <div
              class="absolute top-0 left-0 w-1 h-full opacity-70"
              style="background: linear-gradient(to bottom, #931a24, #000000, #ffffff, #236E1E); filter: blur(3.5px); border-radius: 16px 0 0 16px;"
            >
            </div>
            <!-- Palestinian Flag Colors Accent Right -->
            <div
              class="absolute top-0 right-0 w-1 h-full opacity-70"
              style="background: linear-gradient(to bottom, #931a24, #000000, #ffffff, #236E1E); filter: blur(3.5px); border-radius: 0 16px 16px 0;"
            >
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
